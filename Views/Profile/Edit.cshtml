@using GroupM.CSE.ProofOfIdea.Models
@model UserProfile
@{
    ViewBag.Title = "Edit";
}

<h1>@ResourceLang.Profile</h1>
@if (Model.User != null && Model.User.UserName == User.Identity.Name)
{
    <h4><a href="@Url.Action("Create", "Profile")">@ResourceLang.EditYourProfile</a></h4>
}

<div class="row">
    @using (Html.BeginForm("Create", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="col-md-8 container-fluid">
            <div class="cseButtonSolidMd" style="width:100%;text-align:left">
                <span class="">@ResourceLang.ProfileInfo.ToUpper()</span>
            </div>
            <div class="cseLightGreyFrame" style="width:100%;padding:20px"> 
                <form class="form-horizontal">
                    <div class="form-group cseInputLine row">
                        @Html.LabelFor(m => m.User.FirstName, ResourceLang.Name, new { @class = "col-md-2 control-label text-left" })
                        <div class="col-sm-4 pull-right">
                            @Model.User.LastName
                            @Html.ValidationMessageFor(m => m.User.LastName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-4 pull-right">
                            @Model.User.FirstName
                            @Html.ValidationMessageFor(m => m.User.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group cseInputLine row">
                        @Html.LabelFor(m => m.DateOfBirth, ResourceLang.DateOfBirth, new { @class = "col-md-2 control-label text-left" })
                        <div class="col-sm-4 pull-right">
                            <h2>TEST</h2>
                           @Model.DateOfBirth
                            @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group cseInputLine row">
                        @Html.LabelFor(m => m.CurrentOccupation, ResourceLang.CurrentOccupation, new { @class = "col-md-2 control-label text-left" })
                        <div class="col-sm-4 pull-right" style="padding:0px 25px 0px 10px;">
                            @Model.CurrentOccupation.ToString()
                            @Html.ValidationMessageFor(m => m.CurrentOccupation, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group cseInputLine row">
                        <div class="col-sm-2 pull-right">
                            @Model.SchoolYearEnd
                            @Html.ValidationMessageFor(m => m.SchoolYearEnd, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-2 pull-right">
                            @Model.SchoolYearStart
                            @Html.ValidationMessageFor(m => m.SchoolYearStart, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-3 pull-right">
                            @Model.SchoolName
                            @Html.ValidationMessageFor(m => m.SchoolName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group cseInputLine row">
                        @Html.LabelFor(m => m.PreviousStartupsCount, ResourceLang.PreviousStartups, new { @class = "col-md-2 control-label text-left" })
                        <div class="col-sm-4 pull-right" style="padding:0px 25px 0px 10px;">
                            @Model.PreviousStartupsCount
                            @Html.ValidationMessageFor(m => m.PreviousStartupsCount, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-offset-2 col-md-2 pull-right">
            <img class="text-center" id="profileImagePreview" src="~/Content/Images/profileimage.png" style="min-width:132px;min-height:132px;padding:16px" />
        </div>
    }
</div>
